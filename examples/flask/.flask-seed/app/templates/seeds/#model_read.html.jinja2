<div id="div-model.name_kebab">
    {{ render_schema(model.name_lower, model.schema) }}
</div>

{% macro render_schema(name, schema, base='') %}
    {% if schema.type == 'object' -%} {# object #}
        {% for row in schema.layout %}
            {% if row|length == 1 and row[0] == '-' %}
                <hr class="mt-4 mb-5">
            {% else %}
                <dl class="row">
                    {% for col in row %}
                        {{ render_schema(col, schema.properties[col], path) }}
                    {% endfor %}
                </dl>
            {% endif %}
        {% endfor %}
    {%- elif schema.type == 'array' -%} {# array #}
        TODO
    {%- else -%} {# simple field #}
        {% set field_schema = schema.properties[col] %}
        {% set field_path = path %}
        <dt class="col">{{ field_schema.title }}</dt>
        <dd class="col">{{ '{{' }} field_path {{ '}}' }}</dd>
    {%- endif %}
{% endmacro %}